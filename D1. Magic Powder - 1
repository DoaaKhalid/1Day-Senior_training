#include<bits/stdc++.h>
using namespace std;
int n , k , a[1000000] , a2[1000000] ;

bool OK(int x)
{
    int m=k;
    for(int i = 0 ; i < n ; i++)
    {

        if(a[i]/a2[i] < x)
        {
            if(  m >= a2[i]*x - a[i] )
                m -= a2[i]*x - a[i];
            else
                return false;
        }
    }
    return true;
}

int BinarySearch(){
    int l = 0 , h= 10000 , mid ;

    while(l<h){
        mid = (l+h+1)/2;
        if(OK(mid))
            l = mid;
        else
            h =  mid-1;
    }
    return  l;
    }
int main()
{
cin >> n >> k ;
    for(int i = 0 ; i < n ; i++)
        cin >> a[i];
    for(int i = 0 ; i < n ; i++)
        cin >> a2[i];
    cout << BinarySearch() << endl;
    return 0;
}
