#include<iostream>
#include <bits/stdc++.h>
using namespace std;
int main()
{ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
int n,x,a,b;
while(cin>>n,n)
{
    int ans=0;                                           
priority_queue <int , vector <int> ,greater <int> >  q;

for(int i=0;i<n;i++)
    {cin>>x;
    q.push(x);
    }
    while(q.size()>1)
    {
        a=q.top();
        q.pop();
        b=q.top();
        q.pop();
        ans+=a+b;
        q.push(a+b);
    }
cout<<ans<<endl;
}
	return 0;
}
