#include<iostream>
#include <bits/stdc++.h>
using namespace std;
int n,x,ar[10000];

bool GetSort(int a,int b)
{
    if(a%x<b%x)
        return true;
    else if (b%x<a%x)
        return false ;
    else if(a&1 && !(b&1))
        return true;
        else if(a&1 && b&1)
            return (a>b);
        else if(!(a&1)&& !(b&1))
            return (a<b);
            /*else if(a&1 && b&1&&a<0&&b<0)
            return (a<b);
        else if(!(a&1)&& !(b&1)&&a<0&&b<0)
            return (a>b);*/
        else
            return false ;

}
int main()
{
ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
while (cin>>n>>x,n,x)
{
     for(int i=0;i<n;i++)
     cin>>ar[i];
     sort(ar,ar+n,GetSort);
     cout<<n<<" "<<x<<endl;
      for(int  i=0;i<n;i++)
    cout<<ar[i]<<endl;
    cout<<"0"<<" "<<"0"<<endl;


}
	return 0;
}
